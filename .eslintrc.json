{
  "env": {
    "es2021": true
  },
  "root": true,
  "extends": ["plugin:@typescript-eslint/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "prefer-template": "error",
    "@typescript-eslint/no-explicit-any": "off",
    "radix": "error",
    "import/prefer-default-export": "off"
  }
}
